<div id="user_status_buttons">
  <% if @user.provider %>
    <p>CCID credentials are linked to account</p>
  <% else %>
    <%= link_to "Link CCID credentials to account", user_omniauth_authorize_path(provider: 'shibboleth') %>
  <% end %>
  <% if current_user.admin? %>
    <% if @user.access_locked? %>
      <%= link_to "Activate User", unlock_access_user_path(@user) %>
    <% else %>
      <%= link_to "Deactivate User", lock_access_user_path(@user) %>
    <% end %>
  <% end %>
</div>
